<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#355E3B"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvBottomSheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Buat Perencanaan"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Misal : Liburan setelah natal"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#90EE90" />

    <Button
        android:id="@+id/btnCreatePlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cream"
        android:text="Buat"
        android:textColor="#355E3B" />
</LinearLayout>
